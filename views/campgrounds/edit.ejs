<%- include('../partials/header') %>

<div class="container">
    <div class="row">
	<h1 style="text-align: center;">Edit <%= campground.name %></h1>

	<div style="width: 30%; margin: 30px auto;">
	    <form action="/campgrounds/<%= campground._id %>?_method=put" method="post">
		<div class="form-group">
		    <input type="text" value="<%= campground.name %>" name="campground[name]" class="form-control">
		</div>
		<div class="form-group">
		    <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
		</div>
		<div class="form-group">
		    <input type="text" value="<%= campground.description %>" name="campground[description]" class="form-control">
		</div>
		<div class="form-group">
		    <button class="btn btn-primary btn-lg btn-block">Submit</button>
		</div>
	    </form>
	    <a href="/campgrounds/<%= campground._id %>">Go Back</a>
	</div>
    </div>
</div>

<%- include('../partials/footer') %>
