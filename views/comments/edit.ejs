<%- include('../partials/header') %>

<div class="container">
    <div class="row">
	<h1 style="text-align: center;">Edit Comment</h1>
	<div style="width: 30%; margin: 30px auto;">
	    <form action="/stations/<%= station_id %>/comments/<%= comment._id %>?_method=put" method="post">
		<div class="form-group">
		    <input type="text" value="<%= comment.text %>" name="comment[text]" class="form-control">
		</div>
		<div class="form-group">
		    <button class="btn btn-primary btn-lg btn-block">Submit</button>
		</div>
	    </form>
	    <a href="/stations/<%= station_id %>">Go Back</a>
	</div>
    </div>
</div>

<%- include('../partials/footer') %>
